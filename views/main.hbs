 <div class="container">
      <div class="row">
        <form action="/guardar" method="POST" enctype="multipart/form-data">
          <div class="row">
              <div class="mb-3">
                  <label for="title">Ingrese el titulo</label>
                  <input type="text" name="title" id="" class="form-control">
              </div>
              <div class="mb-3">
                  <label for="price">Ingrese el precio</label>
                  <input type="text" name="price" id="" class="form-control">
              </div>
              <div class="mb-3">
                  <label for="thumbnail">Ingrese la URL de la imagen</label>
                  <input type="text" name="thumbnail" id="" class="form-control">
              </div>
              <div class="mb-3">
                  <input type="submit" value="Guardar" class="btn btn-primary">
              </div>
          </div>
      </form>

      </div>
       
    </div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <h1 class="text-center">Lista de productos</h1>
            <table class="table table-striped table-hover mt-5 text-center">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Thumbnail</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if items}}
                        {{#each items}}
                        <tr style="vertical-align: middle;">
                            <th scope="row">{{id}}</th>
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td><img src="{{thumbnail}}" alt="{{title}}" height="50"></td>
                        </tr>
                        {{/each}}
                   {{else}}
                    <tr>
                        <td colspan="4" class="text-center">No hay productos</td>
                    </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>
